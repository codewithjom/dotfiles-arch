#!/bin/bash

printf "\e[1;32m####################\e[0m\n"
printf "\e[1;32m## Updating JDOS! ##\e[0m\n"
printf "\e[1;32m####################\e[0m\n"

rm -rf ~/.config/alacritty/
rm -rf ~/.config/dunst/
rm -rf ~/.config/fish/
rm -rf ~/.config/mpv/
rm -rf ~/.config/nvim/
rm -rf ~/.config/picom/
rm -rf ~/.config/qtile/
rm -rf ~/.config/qutebrowser/
rm -rf ~/ .config/rofi/
rm -rf ~/.config/sxhkd/
rm -rf ~/.config/vimb/
rm -rf ~/.config/betterlockscreenrc
rm -rf ~/.config/starship.toml
rm -rf ~/.emacs.d/
rm -rf ~/.local/bin/
rm -rf ~/.bashrc 
rm -rf ~/.xinitrc 
rm -rf ~/.zshrc

git	clone https://gitlab.com/nightjd/jdos-qtile.git
cd jdos-qtile/
mv .config/alacritty/ ~/.config/
mv .config/dunst/ ~/.config/
mv .config/fish/ ~/.config/
mv .config/mpv/ ~/.config/
mv .config/nvim/ ~/.config/
mv .config/picom/ ~/.config/
mv .config/qtile/ ~/.config/
mv .config/qutebrowser/ ~/.config
mv .config/rofi/ ~/.config/
mv .config/sxhkd/ ~/.config/
mv .config/vimb/ ~/.config/
mv .config/betterlockscreenrc ~/.config/
mv .config/starship.toml ~/.config/
mv .emacs.d/ ~/.emacs.d/
mv .local/bin/ ~/.local/
mv .bashrc .xinitrc .zshrc ~/
cd ..;rm -rf jdos-qtile

printf "\e[1;32m######################\e[0m\n"
printf "\e[1;32m## JDOS is updated! ##\e[0m\n"
printf "\e[1;32m######################\e[0m\n"

